<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExercisesActivity"
    android:background="@drawable/fondo_degrade_verde">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnTruncate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="293dp"
            android:layout_height="106dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="Ejercicios de stretching para mejorar tu postura corporal y evitar la fatiga de los músculos"
            android:textColor="#45774F"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="148dp" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="55dp"
            android:text="Ejercicios"
            android:textColor="#45774F"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="54dp"
            android:layout_alignBottom="@+id/tvTitulo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="62dp"
            android:layout_marginBottom="-1dp"
            android:src="@drawable/hombrecito_verde" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="250dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="240dp">

            <LinearLayout
                android:layout_width="283dp"
                android:layout_height="250dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="283dp"
                    android:layout_height="167dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/streching"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:text="Ejercicios típicos de stretching"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="283dp"
                android:layout_height="250dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="283dp"
                    android:layout_height="167dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/image_video_2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:text="Para hacer sentado"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="283dp"
                android:layout_height="250dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="283dp"
                    android:layout_height="167dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/image_video_3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:text="Stretching de oficina"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="283dp"
                android:layout_height="250dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="283dp"
                    android:layout_height="167dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/image_video_4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:text="Ejercicios avanzados"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="#416644"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>