<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurationActivity"
    android:background="@drawable/fondo_degrade_rojo">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="88dp"
        android:layout_height="69dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        app:srcCompat="@drawable/configuracion"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="262dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="44dp"
        android:text="Configuración"
        android:textColor="#833232"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="310dp"
        android:layout_height="131dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:text="Configura las notificaciones que quieras recibir a través de tu LumbSeat."
        android:textColor="#833232"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="162dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:fontFamily="@font/roboto_bold"
        android:text="Leds"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="309dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:fontFamily="@font/roboto_bold"
        android:text="Vibración"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="360dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="93dp"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Peso"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="415dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="88dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/switch1"
        android:layout_alignTop="@+id/textView8"
        android:backgroundTint="#FC9899"
        android:ems="10"
        android:fontFamily="@font/roboto_thin"
        android:hint="-"
        android:inputType="number"
        android:maxLength="3"
        android:textAlignment="center"
        android:textColor="#FC9899"
        android:textColorHint="#FC9899"
        android:textCursorDrawable="@null"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="411dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_below="@+id/textView7"
        android:text="KG"
        android:textColor="#FC9899"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="411dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="85dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="308dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="85dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/switch1"
        android:layout_alignTop="@+id/textView7"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Sign Out" />


</RelativeLayout>